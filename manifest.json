{
	"manifest_version": 2,
	
	"name": "Regex Search",
	"version": "1.0",

	"permissions": [
		"tabs", "http://*/*"
	],

	"content_scripts": [
		{
			"matches": ["http://*/*", "file:///*"],
			"js": ["content.js"]
		}
	],

	"browser_action": {
		"default_icon": {
			"19": "images/icon19.png",
			"38": "images/icon38.png"
		},
		"default_popup": "popup.html"
	},

	"icons": {
		"16": "images/icon16.png",
		"48": "images/icon48.png",
		"128": "images/icon128.png"
	}
}
